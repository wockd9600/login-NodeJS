<link rel='stylesheet' href='/css/user.css' />

<h3>로그인</h3>
<form action="/signin" method="post">
    <table>
        <tr>
            <td>아이디 : </td>
            <td>
                <input type="text" name="userID" class="userID" autocomplete='off' onblur="checkID(this)" maxlength='15' />
            </td>
        </tr>
        <tr>
            <td>비밀번호 : </td>
            <td>
                <input type="password" name="userPW" class="userPW" onblur="checkPW(this)" maxlength='15' />
            </td>
        </tr>
        <tr>
            <td>
                <button type="submit" onclick="location.href='./signin' ">로그인</button>
            </td>
        </tr>
    </table>
</form>
<button type="button" onclick="location.href='/users/signup' ">회원가입</button>

<script type="text/javascript" src="/js/user/login.js"></script>